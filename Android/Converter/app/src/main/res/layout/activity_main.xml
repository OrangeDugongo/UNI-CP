<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.unisannio.cp.orange.converter.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/inText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/btc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/in"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/in"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintLeft_toRightOf="@+id/inText"
        app:layout_constraintRight_toLeftOf="@+id/swap"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/outText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eur"
        app:layout_constraintTop_toTopOf="@+id/out"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/out"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintLeft_toRightOf="@+id/outText"
        app:layout_constraintRight_toLeftOf="@+id/swap"
        app:layout_constraintTop_toBottomOf="@+id/in" />

    <Button
        android:id="@+id/swap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/swap"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@+id/in"
        app:layout_constraintBottom_toBottomOf="@+id/out"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="18dp"
        android:text="@string/convert"
        app:layout_constraintLeft_toLeftOf="@+id/out"
        app:layout_constraintTop_toBottomOf="@+id/out" />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginTop="18dp"
        android:text="@string/clear"
        app:layout_constraintRight_toRightOf="@+id/out"
        app:layout_constraintTop_toBottomOf="@+id/out" />
</android.support.constraint.ConstraintLayout>
